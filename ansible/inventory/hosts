# Ansible Inventory for Kubernetes Cluster
# Update the IP addresses after provisioning EC2 instances

[master]
k8s-master ansible_host=REPLACE_WITH_MASTER_IP ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/k8s-key.pem

[workers]
k8s-worker1 ansible_host=REPLACE_WITH_WORKER1_IP ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/k8s-key.pem
k8s-worker2 ansible_host=REPLACE_WITH_WORKER2_IP ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/k8s-key.pem

[k8s_cluster:children]
master
workers

[k8s_cluster:vars]
ansible_python_interpreter=/usr/bin/python3
